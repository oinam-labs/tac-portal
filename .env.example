# TAC Portal - Environment Variables Example
# Copy this file to .env.local and fill in the values

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
# Server-side only (never expose to client-side, do NOT prefix with VITE_)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# SENTRY CONFIGURATION (Error Tracking & Monitoring)
# ============================================================================
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ORG=your-sentry-org
VITE_SENTRY_PROJECT=your-sentry-project

# ============================================================================
# AI CONFIGURATION (OpenRouter)
# ============================================================================
OPENROUTER_API_KEY=your-openrouter-key-here

# ============================================================================
# RESEND CONFIGURATION (Email Service)
# ============================================================================
# Set to 'true' to enable email functionality
VITE_RESEND_CONFIGURED=false
# Note: RESEND_API_KEY is set in Supabase Edge Function secrets, not here

# ============================================================================
# FEATURE FLAGS (Optional Overrides)
# ============================================================================
# VITE_FEATURE_OFFLINE_SCANNING=true
# VITE_FEATURE_REALTIME_TRACKING=true
# VITE_FEATURE_EMAIL_INVOICES=false
# VITE_FEATURE_AUDIT_LOGS=true

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Set to 'development' or 'production'
NODE_ENV=development
